<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean name="/newsaction" 
        class="com.epam.testapp.presentation.action.NewsAction"
        singleton="true">
        <property name="newsDao" ref="simpleNewsDao"></property>
    </bean>
    <bean id="simpleNewsDao" class="com.epam.testapp.dao.SimpleNewsDao"
        singleton="true">
    </bean>
    <bean id="jdbcNewsDao" class="com.epam.testapp.dao.JdbcNewsDao"
        singleton="true">
        <property name="connectionPool" ref="jdbcConnectionPool"></property>
    </bean>
    <bean id="jdbcConnectionPool" class="com.epam.testapp.connection.JdbcConnectionPool"
        singleton="true" init-method="init" destroy-method="destroy">
        <property name="dbMaxConnections">
            <value>20</value>
        </property>
        <property name="dbMaxIdleConnections">
                <value>5</value>
        </property>
        <property name="dbUrl">
                <value>jdbc:oracle:thin:@localhost:1521:XE</value>
        </property>
        <property name="dbDriverName">
                <value>oracle.jdbc.driver.OracleDriver</value>
        </property>
        <property name="dbUserName">
                <value>alena</value>
        </property>
        <property name="dbPassword">
                <value>alena</value>
        </property>
    </bean>
</beans>